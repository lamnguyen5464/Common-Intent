<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MenuActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/btUseContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Use contact intent"
                android:layout_below="@+id/btUseEmail"
                android:layout_marginTop="8dp"
                />

            <Button
                android:id="@+id/btUseEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Use email intent"
                android:layout_below="@+id/btUseStorage"
                android:layout_marginTop="8dp"
                />

            <Button
                android:id="@+id/btUseStorage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Use storage intent"
                android:layout_below="@+id/btnNote"
                android:layout_marginTop="8dp"
                />
            <Button
                android:id="@+id/btnNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Use note intent"
                android:layout_below="@+id/btnSearch"
                android:layout_marginTop="8dp"
                />
            <Button
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Use search intent"
                android:layout_below="@+id/btnPhone"
                android:layout_marginTop="8dp"
                />
            <Button
                android:id="@+id/btnPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Use phone intent"
                android:layout_marginTop="8dp"
                />
            <Button
                android:id="@+id/btUseAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btUseContact"
                android:text="Use alarm intent"
                android:layout_marginTop="8dp"
                />

            <Button
                android:id="@+id/btUseCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Use caldendar intent"
                android:layout_below="@+id/btUseAlarm"
                android:layout_marginTop="8dp"
                />
            <Button
                android:id="@+id/btUseCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Use camera intent"
                android:layout_below="@+id/btUseCalendar"
                android:layout_marginTop="8dp"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>